{% block zrm_surcharge_list %}
    <sw-page class="zrm-surcharge-list">
        <template #smart-bar-actions>
            <sw-button variant="primary" :routerLink="{ name: 'zrm.surcharge.create' }">
                {{ $tc('zrm-surcharge.list.surchargeCreate') }}
            </sw-button>
        </template>

        <template #content>
            <sw-entity-listing
                    v-if="surchargeList"
                    :items="surchargeList"
                    :repository="repository"
                    :showSelection="false"
                    :columns="columns"
                    detailRoute="zrm.surcharge.detail"
            >
            </sw-entity-listing>
        </template>
    </sw-page>
{% endblock %}